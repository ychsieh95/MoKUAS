@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - MoKUAS | @(Newtonsoft.Json.JsonConvert.DeserializeObject<MoKUAS.Models.Student>(User.Claims.First(claim => claim.Type == "Information").Value).ChtName)</title>
    <!-- Favicon Package -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicons/favicon-16x16.png" />
    <link rel="manifest" href="~/favicons/site.webmanifest" />
    <link rel="mask-icon" href="~/favicons/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <!-- CSS -->
    <link rel="stylesheet" href="@(HttpContextAccessor.HttpContext.Request.Cookies.ContainsKey(".MoKUAS.Bootstrap.Theme") ?
                                   $"/lib/bootswatch/{ HttpContextAccessor.HttpContext.Request.Cookies[".MoKUAS.Bootstrap.Theme"] }/bootstrap.min.css" :
                                   "/lib/bootstrap/css/bootstrap.min.css")" type="text/css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="~/lib//fonts/fonts.css" type="text/css" />
    <style type="text/css">
        @@media (max-width: 991px) {
            div.navbar-right {
                float: right;
                margin-right: 0px;
            }
        }
    </style>
    <!-- Others CSS -->
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a asp-page="/Student/Index" class="navbar-brand">
                <img src="~/favicons/favicon-512x512-square.png" width="30" height="30" class="d-inline-block align-top" />
                MoKUAS
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarToggler">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                            <i class="fa fa-fw fa-user"></i>
                            <span> 學期資訊</span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a asp-page="/Student/Profile"
                               class="dropdown-item">學籍資料</a>
                            <a asp-page="/Student/CourseList"
                               class="dropdown-item">學期課表</a>
                            <a asp-page="/Student/Scores"
                               class="dropdown-item">學期成績</a>
                            <a asp-page="/Student/MissClasses"
                               class="dropdown-item">學期缺曠</a>
                            <a asp-page="/Student/Credits" class="dropdown-item">學分試算</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                            <i class="fa fa-fw fa-list-alt"></i>
                            <span> 預警報表</span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a asp-page="/Student/MidtermAlerts" class="dropdown-item">期中預警資料</a>
                            <a asp-page="/Student/ScoreReport" class="dropdown-item">歷年成績報表</a>
                            <a asp-page="/Student/GraduationThreshold" class="dropdown-item">畢業門檻查調</a>
                            <a asp-page="/Student/GraduationAuditReport" class="dropdown-item">畢業預審報表</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                            <i class="fa fa-fw fa-shopping-cart"></i>
                            <span> 繳費單據</span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a asp-page="/Student/Payments" class="dropdown-item">繳費單</a>
                            <a asp-page="/Student/Receipts" class="dropdown-item">繳費單收據</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                            <i class="fa fa-fw fa-table"></i>
                            <span> 教學評量</span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a asp-page="/Student/AutoEvaluate" class="dropdown-item">教學評量自動填寫</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                            <i class="fa fa-fw fa-pencil-square-o" aria-hidden="true"></i>
                            <span> 學生評量</span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a asp-page="/Courses/Index" class="dropdown-item">評價排行</a>
                            <a asp-page="/Courses/Overview" class="dropdown-item">課程概要</a>
                            <a asp-page="/Courses/ListAll" class="dropdown-item">所有評論</a>
                            <div class="dropdown-divider"></div>
                            <a asp-page="/Courses/Mine" class="dropdown-item">我的評論</a>
                            <a asp-page="/Courses/Create/Select" class="dropdown-item">新增評論</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                            <i class="fa fa-fw fa-plus" aria-hidden="true"></i>
                            <span> 其他功能</span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a asp-page="/Student/Settings/ThemePlate" class="dropdown-item">切換面板</a>
                            <a asp-page="/Student/Feedback" class="dropdown-item">回報、問題或建議</a>
                        </div>
                    </li>
                </ul>
                <div class="navbar-nav navbar-right">
                    <a asp-page="/Student/Logout" class="btn btn-danger">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <!-- Bootstrap -->
    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- lazy load CSS -->
    <script type="text/javascript">
        var cb = function () {
            var a = document.createElement('link');
            a.rel = 'stylesheet';
            a.href = '/lib/fonts/fonts.css';
            a.media = 'screen and (min-width: 769px)';

            var z = document.getElementsByTagName('head')[0];
            z.parentNode.insertBefore(a, z);
        };
        var raf = requestAnimationFrame || mozRequestAnimationFrame ||
            webkitRequestAnimationFrame || msRequestAnimationFrame;
        if (raf) raf(cb);
        else window.addEventListener('load', cb);
    </script>
    <!-- remove blank fields from a form before submitting -->
    <script type="text/javascript">
        $(function () {
            $("form").submit(function () {
                $(this).find(":input").filter(function () { return !this.value; }).attr("disabled", "disabled");
                return true; // ensure form still submits
            });
        });
    </script>
    @RenderSection("scripts", false)
    <footer>
        <hr />
        <div class="text-center">
            <p>
                <a asp-page="/Student/Settings/ThemePlate"><i class="fa fa-adjust" aria-hidden="true"></i></a>
                <span>　</span>
                <a asp-page="/Student/Feedback"><i class="fa fa-comments" aria-hidden="true"></i></a>
                <br />
                <span>Copyright &copy; @DateTime.Now.Year Yan</span>
            </p>
        </div>
    </footer>
</body>
</html>